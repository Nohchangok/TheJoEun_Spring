<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>springUpdate0213_ex</display-name>
  
	<servlet>
		<servlet-name>springDispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>

			<!-- 스프링 설정파일의 위치를 넣어준다. -->
			<param-value>classpath:config/root-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		
		<!-- 파일 업로드 형식을 지원하는 web.xml 설정 -->
		<multipart-config>
			<!-- 실제 시스템 안쪽 위치 -->
			<location>C:\\Users\\oo756\\Documents\\TheJoEun_Spring\\filetemp</location>
			<!-- 파일당 사이즈 -->
			<max-file-size>1000000000</max-file-size>
			<!-- 요청당 파일 사이즈 -->
			<max-request-size>400000000</max-request-size>
		</multipart-config>
	</servlet>

	<!-- Map all requests to the DispatcherServlet for handling -->
	<servlet-mapping>
		<servlet-name>springDispatcherServlet</servlet-name>
		<!-- 매핑시킬 url로 변경해준다. -->
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- 한글이 깨지지 않도록 필터 등록 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>

	<!-- 필터맵핑을 통해 어떤 요청에 필터링을 할 지 정한다. -->
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>